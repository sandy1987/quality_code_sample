.clear
.col-lg-5.col-md-6.col-sm-7.col-xs-12.col-centered.devise-box
  .header.password
    =t(:chng_pswd) 
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|

    - if resource.errors.any?
      %br
      = render "/common/error_message", target: resource
    - elsif flash[:success]
      %br
      = render "/common/generic_success", success: [ flash[:success] ]

    = f.hidden_field :reset_password_token
    .fields
      .login_field
        = f.password_field :password, class: 'input-lg form-control', placeholder: t('placeholder.new_password')
      .login_field
        = f.password_field :password_confirmation, class: 'input-lg form-control', placeholder: t('placeholder.confirm_password')
    .action-button
      %button.large-button.full-width#login-button
        = t('devise.change_password')